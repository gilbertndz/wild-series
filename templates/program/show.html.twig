{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <h2>Catégorie : {{ program.category.name }}</h2>
            <h2>Les Saisons:</h2>
            {% for season in seasons %}
            {% if season.program.id == program.id %}
                <a href="{{ path ("program_season_show", {programId: program.id, seasonId: season.number})}}">Saison n°{{ season.number }}</a>
                <p>Année de sortie: {{ season.year }}</p>
                <p>Synopsis: {{ season.description }}</p>
            {% endif %}
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des séries
    </a>
{% endblock %}