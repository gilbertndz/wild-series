{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ program.synopsis }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>
    <strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <a href="{{ path('app_actor_show', {'id': actor.id}) }}">{{ actor.name }}</a><br>
    {% else %}
        <li>Aucun acteur pour cette s√©rie</li>
    {% endfor %}
</ul>

    <a href="{{ path('app_program_index') }}">back to list</a>

    <a href="{{ path('app_program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
