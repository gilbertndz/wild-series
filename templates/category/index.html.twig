{% extends 'base.html.twig' %}

{% block title %}Les séries{% endblock %}

{% block body %}
    <h1>Toutes les catégories : </h1><br><br>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2><br>
            {# Lien vers la catégorie : #}
            <a href="{{ path("category_show", { id: category.id }) }}">Voir les séries de cette catégorie</a>
            <br><br>
        </div>
    {% endfor %}

    <a href="{{ path('program_index') }}">
        Retour à la liste des séries
    </a><br><br>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}